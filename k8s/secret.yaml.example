# Скопируйте в secret.yaml и заполните значения. НЕ коммитьте secret.yaml!
# kubectl create secret generic hubnity-secrets --from-literal=... -n hubnity --dry-run=client -o yaml > k8s/secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: hubnity-secrets
  namespace: hubnity
type: Opaque
stringData:
  POSTGRES_PASSWORD: "CHANGE_ME"
  REDIS_PASSWORD: ""  # оставьте пустым если Redis без пароля
  JWT_SECRET: "CHANGE_ME_STRONG_SECRET"
  DATABASE_URL: "postgresql://postgres:CHANGE_ME@hubnity-postgres:5432/timetracker?schema=public"
